{% extends 'base.html.twig' %}

{% block title %}Familles{% endblock %}

{% block body %}
    <h1>Liste des familles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for famille in familles %}
            <tr>
                <td>{{ famille.id }}</td>
                <td>{{ famille.libelle }}</td>
                <td>
                    <a href="{{ path('famille_show', {'id': famille.id}) }}">show</a>
                    <a href="{{ path('famille_edit', {'id': famille.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('famille_new') }}" class="btn btn-success bouton_droit">Ajouter</a>
{% endblock %}
